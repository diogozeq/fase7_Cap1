# Database Configuration
DATABASE_URL=sqlite:///./farmtech.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend Configuration
NUXT_PUBLIC_API_BASE=http://localhost:8000/api

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration
AWS_REGION=sa-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# AWS SNS - Email e SMS
AWS_SNS_TOPIC_ARN=arn:aws:sns:sa-east-1:123456789012:farmtech-alerts-email
AWS_SNS_SMS_TOPIC_ARN=arn:aws:sns:sa-east-1:123456789012:farmtech-alerts-sms

# AWS SES - Email Service
AWS_SES_SENDER_EMAIL=noreply@farmtech.com
AWS_SES_REGION=sa-east-1

# AWS S3 - Storage
AWS_S3_BUCKET=farmtech-storage

# AWS CloudWatch - Logs e Metrics
AWS_CLOUDWATCH_LOG_GROUP=/farmtech/logs

# Contatos para Alertas
ALERT_EMAIL_LIST=admin@farmtech.com,supervisor@farmtech.com
ALERT_SMS_LIST=+5511999999999,+5511888888888

# Weather API
WEATHER_API_URL=http://servicos.cptec.inpe.br/XML/cidade/241/previsao.xml

# YOLO Model
YOLO_MODEL_PATH=./models/yolov8n.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
CV_STATIC_IMAGES_DIR=./models/cv_samples

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
